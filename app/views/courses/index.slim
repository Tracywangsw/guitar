  body
    .xm_video
      .grid
        - @courses.each do |c|
          .grid-item
            a[href=course_path(c) title=c.name]
              li.con
                img[src=c.get_cover_image_url]
                .txt
                  h3 = c.name
                  p = c.description

    script[src=asset_path("courses/dynamics.js")]
